<!doctype html>
<html>

	<head>
		<title>Story Page</title>	
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
		<link href="/css/introHCI.css" rel="stylesheet">
		<link href="/css/storyshareformat.css" rel="stylesheet"> 
	</head>

	<body>
		<div class="container">

			<a href="/placeholders/menu.html"><div class="banner" id = "StoryBanner"></div></a>

			<nav class="navbar navbar-default" role="navigation">
		  				<div class="container-fluid">  
		  		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      		<ul class="nav navbar-nav">
		        		<li><a href="addStory.html"><span class="glyphicon glyphicon-plus"></span></a></li>
		      		</ul>
		      		<ul class="nav navbar-nav navbar-right">
		       			<li><a href="mainpage.html"><span class="glyphicon glyphicon-pencil"></span></a></li>
		        		<li><a href="mainpage.html"><span class="glyphicon glyphicon-book"></span></a></li>
		      		</ul>
		      		<form class="navbar-form navbar-right" role="search">
		        		<div class="form-group">
		          			<input type="text" class="form-control" placeholder="Search">
		        		</div>
		        		<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
		      			</form>
		    	  	</div><!-- /.navbar-collapse -->
		  		</div><!-- /.container-fluid -->
			</nav>
			<div id="story">	
				<h2> {{title}} </h2>
				<p id ="text">{{text}}</p>
			</div>
<!-- 
			<a href="placeholders/mainpage.html"><button id="backbtn" class="btn btn-primary btn-lg" style = "margin-top: 10px; margin-left: 10px;">Back</button></a> -->
			
			{{#if _finished}}
				<button id="addBtn" class="btn btn-primary btn-lg" style = "margin-top: 10px; margin-left: 10px;">Add to Story</button>
			{{/if}}

			 <h4> <button id="upVote" type="button" class="btn btn-default">Up Vote</button> <span id="votes">{{votes}}</span><button id="downVote" type="button" class="btn btn-default">Down Vote</button></h4>
		</div>

	<!-- Add the "back button" -->

		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/jquery-1.11.0.js"></script>
		<script src="/js/bootstrap.js"></script>
		<script src="/js/storypage.js"></script>

	</body>
</html>
