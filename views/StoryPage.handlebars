<html>

	<head>
		<title>Story Page</title>	
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<script src="../js/jquery-1.11.0.js"></script>
		<link href="../css/bootstrap.css" rel="stylesheet">
		<script src="../js/bootstrap.min.js"></script>
		<link href="../css/bootstrap-theme.min.css" rel="stylesheet">
		<link href="../css/storyshareformat.css" rel="stylesheet"> 
		<link href='http://fonts.googleapis.com/css?family=Mrs+Sheppards' rel='stylesheet' type='text/css'>
	</head>

	<body>


		  {{> banner}}


		<div class="container" id="storyContainer">



			<div id="{{id}}" class = "story">	
				<p><font size = 5> {{title}} </font></p>
				<p id ="text">{{text}}</p>
			</div>
			<div class="span7">
				{{#if finished}}
					<a href= "/archive"><button id = "backBtn" class="btn btn pull-right btn-primary btn-lg" style = "margin-top: 10px">Go Back</button></a>
				{{/if}}
				{{#if not-finished}}
					<button id="addBtn" class="btn btn-primary btn-lg" style = "margin-top: 10px">Add to Story</button>
					<a href= "/main"><button id = "backBtn" class="btn btn pull-right btn-primary btn-lg" style = "margin-top: 10px">Go Back</button></a>
				{{/if}}
			</div>
		</div>
		<script src="../js/jquery.charactercounter.js"></script>
		<script src="../js/storypage.js"></script>
		<script src="../js/bootstrap.min.js"></script>
		<script src="../js/bootstrap.js"></script>

