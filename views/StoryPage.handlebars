<html>

	<head>
		<title>Story Page</title>	
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<script src="../js/jquery-1.11.0.js"></script>
		<link href="../css/bootstrap.css" rel="stylesheet">
		<script src="../js/bootstrap.min.js"></script>
		<link href="../css/bootstrap-theme.min.css" rel="stylesheet">
		<link href="../css/storyshareformat.css" rel="stylesheet"> 
		<link href='http://fonts.googleapis.com/css?family=Mrs+Sheppards' rel='stylesheet' type='text/css'>
		<script src="HTMLImports/html-imports.js"></script>
	</head>

	<body>


		 {{> banner}}

		<div class="container">



			<div id="{{id}}" class = "story">	
				<h2> {{title}} </h2>
				<p id ="text">{{text}}</p>
			</div>
<!-- 
			<a href="placeholders/mainpage.html"><button id="backbtn" class="btn btn-primary btn-lg" style = "margin-top: 10px; margin-left: 10px;">Back</button></a> -->
			
			{{#if finished}}
				<div class="span7 text-center">
				<button id="addBtn" class="btn btn-primary btn-lg" style = "margin-top: 10px; margin-left: 10px;">Add to Story</button>
			</div>
			{{/if}}

			 <h4> <button id="upVote" type="button" class="btn btn-default btn-sm">Up Vote</button> <span id="votes">{{votes}}&nbsp</span><button id="downVote" type="button" class="btn btn-default btn-sm">Down Vote</button></h4>
		</div>

	<!-- Add the "back button" -->

		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="../js/bootstrap.min.js"></script>
		<script src="../js/jquery-1.11.0.js"></script>
